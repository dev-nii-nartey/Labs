<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.textprocessingtool.textprocessingtool.controllers.DataController" spacing="10">
    <children>
        <TextField fx:id="searchField" promptText="Search..." />
        <Button text="Search" onAction="#handleSearch" />
        <ListView fx:id="listView" prefHeight="200.0" prefWidth="200.0" />
        <HBox spacing="10">
            <children>
                <Button text="Edit" onAction="#handleEdit" />
                <Button text="Delete" onAction="#handleDelete" />
            </children>
        </HBox>
        <Label fx:id="statusLabel" text="Status: " />
    </children>
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
</VBox>
