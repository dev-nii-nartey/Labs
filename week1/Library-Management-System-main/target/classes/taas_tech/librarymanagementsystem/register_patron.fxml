<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane prefHeight="400" prefWidth="600" style="-fx-background-color:linear-gradient(to left top,#090979,#00d4ff);" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171" fx:controller="taas_tech.librarymanagementsystem.library.guiController.RegisterPatronController">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
    <TableView fx:id="tableView" prefHeight="400.0" prefWidth="580.0" style="-fx-background-color:linear-gradient(to left top,#090979,#00d4ff);">
        <columns>
            <TableColumn fx:id="idColumn" prefWidth="50" text="ID" />
            <TableColumn fx:id="nameColumn" prefWidth="150" text="Name" />
            <TableColumn fx:id="emailColumn" prefWidth="100" text="Email" />
        </columns>
    </TableView>

    <TextField fx:id="nameField" promptText="Name" GridPane.columnIndex="0" GridPane.rowIndex="1">
      <GridPane.margin>
         <Insets top="20.0" />
      </GridPane.margin></TextField>
    <TextField fx:id="emailField" promptText="Email" GridPane.columnIndex="0" GridPane.rowIndex="2">
      <GridPane.margin>
         <Insets top="20.0" />
      </GridPane.margin></TextField>

    <HBox spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="11">
        <Button onAction="#goToaddBook" style="-fx-background-color: #4caf50; -fx-text-fill: #ffffff;" text="Add Book" />
        <Button onAction="#goToissueBook" style="-fx-background-color: #2196f3; -fx-text-fill: #ffffff;" text="Issue Book" />
        <Button onAction="#goToReturnBook" style="-fx-background-color: #ff9800; -fx-text-fill: #ffffff;" text="Return Book" />
        <Button onAction="#registerPatron" style="-fx-background-color: #9c27b0; -fx-text-fill: #ffffff;" text="Register Patron" />
        <Button onAction="#Exit" style="-fx-background-color: #f44336; -fx-text-fill: #ffffff;" text="Exit" />
    </HBox>
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
