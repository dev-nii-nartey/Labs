<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane prefHeight="400" prefWidth="800" style="-fx-background-color:linear-gradient(to left top,#090979,#00d4ff);" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171" fx:controller="taas_tech.librarymanagementsystem.library.guiController.AddBookController">
    <padding><Insets bottom="10" left="10" right="10" top="10" /></padding>

    <TextField fx:id="titleField" promptText="Title" GridPane.columnIndex="0" GridPane.rowIndex="1">
      <GridPane.margin>
         <Insets left="5.0" top="10.0" />
      </GridPane.margin></TextField>
    <TextField fx:id="authorField" promptText="Author" GridPane.columnIndex="0" GridPane.rowIndex="2">
      <GridPane.margin>
         <Insets left="5.0" top="10.0" />
      </GridPane.margin></TextField>
    <TextField fx:id="genreField" promptText="Genre" GridPane.columnIndex="0" GridPane.rowIndex="3">
      <GridPane.margin>
         <Insets left="5.0" top="10.0" />
      </GridPane.margin></TextField>
    <TextField fx:id="publisherField" promptText="Publisher" GridPane.columnIndex="0" GridPane.rowIndex="4">
      <GridPane.margin>
         <Insets left="5.0" top="10.0" />
      </GridPane.margin></TextField>
    <TextField fx:id="yearField" promptText="Year" GridPane.columnIndex="0" GridPane.rowIndex="5">
      <GridPane.margin>
         <Insets left="5.0" top="10.0" />
      </GridPane.margin></TextField>
    <TextField fx:id="Issued" promptText="IsIssued" GridPane.columnIndex="0" GridPane.rowIndex="6">
      <GridPane.margin>
         <Insets left="5.0" top="10.0" />
      </GridPane.margin></TextField>

    <TableView fx:id="tableView" prefHeight="400" prefWidth="1000" style="-fx-background-color:linear-gradient(to left top,#090979,#00d4ff);">
        <columns>
            <TableColumn fx:id="idColumn" prefWidth="50" text="ID" />
            <TableColumn fx:id="titleColumn" prefWidth="150" text="Title" />
            <TableColumn fx:id="authorColumn" prefWidth="150" text="Author" />
            <TableColumn fx:id="genreColumn" prefWidth="100" text="Genre" />
            <TableColumn fx:id="publisherColumn" prefWidth="150" text="Publisher" />
            <TableColumn fx:id="yearColumn" prefWidth="75" text="Year" />
            <TableColumn fx:id="isIssuedColumn" prefWidth="75" text="Issued" />

        </columns>
    </TableView>

    <HBox spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="11">
        <Button onAction="#addBook" style="-fx-background-color: #4caf50; -fx-text-fill: #ffffff;" text="Add Book">
         <padding>
            <Insets top="5.0" />
         </padding></Button>
        <Button onAction="#goToIssueBook" style="-fx-background-color: #2196f3; -fx-text-fill: #ffffff;" text="Issue Book">
         <padding>
            <Insets top="5.0" />
         </padding></Button>
        <Button onAction="#goToReturnBook" style="-fx-background-color: #ff9800; -fx-text-fill: #ffffff;" text="Return Book">
         <padding>
            <Insets top="5.0" />
         </padding></Button>
        <Button onAction="#goToRegisterPatron" style="-fx-background-color: #9c27b0; -fx-text-fill: #ffffff;" text="Register Patron">
         <padding>
            <Insets top="5.0" />
         </padding></Button>
        <Button onAction="#Exit" style="-fx-background-color: #f44336; -fx-text-fill: #ffffff;" text="Exit">
         <padding>
            <Insets top="5.0" />
         </padding></Button>
    </HBox>
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
